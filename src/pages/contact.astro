---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import contactHeroImg from "../assets/project5.png";
---

<Layout
    title="Hubungi Kami - Konsultasi Gratis Kontraktor Bandung - KBB"
    description="Hubungi Keramik Bangunan Bandung untuk konsultasi gratis proyek konstruksi Anda. Respon cepat via WhatsApp, Email, atau kunjungi kantor kami di Bandung."
    canonical="/contact"
>
    <Navbar />

    <main class="pt-20">
        <!-- Hero Section -->
        <div class="relative bg-gray-900 py-24 sm:py-32">
            <div class="absolute inset-0 z-0 overflow-hidden">
                <Image
                    src={contactHeroImg}
                    alt="Hubungi kontraktor Keramik Bangunan Bandung untuk konsultasi proyek"
                    class="h-full w-full object-cover opacity-20"
                    width={1920}
                    height={1080}
                    loading="eager"
                />
            </div>
            <div
                class="relative z-10 mx-auto max-w-7xl px-6 lg:px-8 text-center"
            >
                <h1
                    class="text-4xl font-bold tracking-tight text-white sm:text-6xl mb-6"
                >
                    Hubungi Kami
                </h1>
                <p class="text-lg leading-8 text-gray-300 max-w-2xl mx-auto">
                    Siap mewujudkan proyek impian Anda? Jangan ragu untuk
                    menghubungi kami. Tim kami siap memberikan solusi terbaik
                    untuk kebutuhan konstruksi Anda.
                </p>
            </div>
        </div>

        <!-- Contact Info Section -->
        <section class="py-24 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                    <!-- Contact Details -->
                    <div>
                        <div
                            class="inline-flex items-center px-5 py-2 rounded-full bg-[#FE5C01] mb-6 shadow-lg shadow-orange-500/20"
                        >
                            <span
                                class="w-2 h-2 rounded-full bg-white mr-2.5 animate-pulse"
                            ></span>
                            <span
                                class="text-white font-bold text-[10px] md:text-xs tracking-[0.2em] uppercase"
                                >Informasi Kontak</span
                            >
                        </div>
                        <h3 class="text-3xl font-bold text-[#151515] mb-8">
                            Kami Siap Membantu
                        </h3>
                        <p class="text-gray-600 mb-10 leading-relaxed">
                            Silakan hubungi kami melalui salah satu saluran di
                            bawah ini. Untuk respon tercepat, Anda bisa langsung
                            memulai obrolan via WhatsApp.
                        </p>

                        <div class="space-y-8">
                            <!-- Address -->
                            <div class="flex items-start">
                                <div
                                    class="w-12 h-12 bg-[#FE5C01]/10 rounded-lg flex items-center justify-center flex-shrink-0"
                                >
                                    <svg
                                        class="w-6 h-6 text-[#FE5C01]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h4
                                        class="text-lg font-bold text-[#151515]"
                                    >
                                        Alamat Kantor
                                    </h4>
                                    <p class="text-gray-600 mt-1">
                                        Jl. Contoh No. 123<br />
                                        Bandung, Jawa Barat<br />
                                        Indonesia 40123
                                    </p>
                                </div>
                            </div>

                            <!-- Phone/WA -->
                            <div class="flex items-start">
                                <div
                                    class="w-12 h-12 bg-[#FE5C01]/10 rounded-lg flex items-center justify-center flex-shrink-0"
                                >
                                    <svg
                                        class="w-6 h-6 text-[#FE5C01]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h4
                                        class="text-lg font-bold text-[#151515]"
                                    >
                                        Telepon & WhatsApp
                                    </h4>
                                    <p class="text-gray-600 mt-1">
                                        +62 812 3456 7890
                                    </p>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Senin - Jumat, 08:00 - 17:00
                                    </p>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="flex items-start">
                                <div
                                    class="w-12 h-12 bg-[#FE5C01]/10 rounded-lg flex items-center justify-center flex-shrink-0"
                                >
                                    <svg
                                        class="w-6 h-6 text-[#FE5C01]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h4
                                        class="text-lg font-bold text-[#151515]"
                                    >
                                        Email
                                    </h4>
                                    <p class="text-gray-600 mt-1">
                                        info@kkb-kontraktor.com
                                    </p>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Untuk penawaran dan kerjasama
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- WhatsApp CTA Box -->
                    <div
                        class="bg-gray-50 rounded-2xl p-8 border border-gray-100 flex flex-col justify-center items-center text-center shadow-lg"
                    >
                        <div
                            class="w-20 h-20 bg-green-500 rounded-full flex items-center justify-center mb-6 shadow-green-500/30 shadow-lg animate-pulse"
                        >
                            <svg
                                class="w-12 h-12 text-white"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                                ></path>
                            </svg>
                        </div>
                        <h4 class="text-2xl font-bold text-[#151515] mb-2">
                            Chat via WhatsApp
                        </h4>
                        <p class="text-gray-500 mb-8 max-w-sm">
                            Konsultasikan kebutuhan Anda secara langsung dengan
                            tim kami. Respon cepat dan ramah.
                        </p>
                        <a
                            href="https://wa.me/6281234567890?text=Halo%20KBB,%20saya%20tertarik%20untuk%20konsultasi%20mengenai%20proyek%20konstruksi."
                            target="_blank"
                            class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-colors shadow-lg shadow-green-500/30 flex items-center justify-center text-lg space-x-2"
                        >
                            <span>Hubungi Sekarang</span>
                            <svg
                                class="w-5 h-5 ml-1"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
