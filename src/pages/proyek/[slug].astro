---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { projects } from "../../data/projects";

export async function getStaticPaths() {
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
---

<Layout>
    <Navbar />

    <main class="pt-20">
        <!-- Hero Project -->
        <div class="relative h-[60vh] min-h-[500px] w-full">
            <div class="absolute inset-0">
                <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#151515] via-black/50 to-transparent"
                >
                </div>
            </div>
            <div
                class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex flex-col justify-end pb-16"
            >
                <div
                    class="inline-flex items-center space-x-2 bg-[#FE5C01] text-white px-4 py-1.5 rounded-full text-sm font-medium w-fit mb-4"
                >
                    <span>{project.category}</span>
                </div>
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4"
                >
                    {project.title}
                </h1>
                <p class="text-xl text-gray-300 flex items-center">
                    <svg
                        class="w-5 h-5 mr-2 text-[#FE5C01]"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    {project.location}
                </p>
            </div>
        </div>

        <!-- Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Main Description -->
                <div class="lg:col-span-2">
                    <h2 class="text-2xl font-bold text-[#151515] mb-6">
                        Tentang Proyek
                    </h2>
                    <div class="prose prose-lg text-gray-600">
                        <p class="leading-relaxed mb-6">
                            {project.description}
                        </p>
                        <p class="leading-relaxed mb-6">
                            Kami memastikan setiap detail dikerjakan dengan
                            presisi tinggi demi kepuasan klien. Mulai dari
                            pemilihan material hingga finishing, standar
                            kualitas KKB selalu menjadi prioritas utama.
                        </p>
                        <p class="leading-relaxed">
                            Hasil akhirnya bukan hanya sebuah bangunan, tetapi
                            sebuah ruang yang siap mendukung aktivitas dan gaya
                            hidup pengguna di dalamnya.
                        </p>
                    </div>

                    <div class="mt-12">
                        <a
                            href="/proyek"
                            class="inline-flex items-center text-[#FE5C01] font-semibold hover:text-[#e54e00] transition-colors"
                        >
                            <svg
                                class="w-5 h-5 mr-2 transform rotate-180"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                            Kembali ke Galeri Proyek
                        </a>
                    </div>
                </div>

                <!-- Sidebar Details -->
                <div class="lg:col-span-1">
                    <div class="bg-gray-50 rounded-2xl p-8 sticky top-28">
                        <h3
                            class="text-xl font-bold text-[#151515] mb-6 border-b border-gray-200 pb-4"
                        >
                            Detail Proyek
                        </h3>
                        <div class="space-y-4">
                            {
                                project.details?.map((detail) => (
                                    <div class="flex justify-between items-start">
                                        <span class="text-gray-500 font-medium">
                                            {detail.label}
                                        </span>
                                        <span class="text-[#151515] font-semibold text-right">
                                            {detail.value}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>

                        <div class="mt-8 pt-6 border-t border-gray-200">
                            <p class="text-gray-600 text-sm mb-4">
                                Tertarik dengan hasil kerja kami?
                            </p>
                            <a
                                href="/contact"
                                class="block w-full text-center bg-[#FE5C01] hover:bg-[#e54e00] text-white px-6 py-3 rounded-xl font-medium transition-colors shadow-lg shadow-orange-500/30"
                            >
                                Hubungi Kami
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
