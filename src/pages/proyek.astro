---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import { projects } from "../data/projects";
import logoBg from "../assets/logo.svg";
---

<Layout>
    <Navbar />

    <main class="pt-20">
        <!-- Header Page -->
        <div class="bg-[#151515] py-20 text-center relative overflow-hidden">
            <div class="absolute inset-0 z-0 opacity-20">
                <Image
                    src={logoBg}
                    alt="Keramik Bangunan Bandung logo background"
                    class="w-full h-full object-cover grayscale"
                    width={400}
                    height={400}
                    loading="eager"
                />
            </div>
            <div class="relative z-10 max-w-7xl mx-auto px-4">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    Galeri Proyek Kami
                </h1>
                <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                    Lihat bagaimana kami mewujudkan visi klien menjadi bangunan
                    berkualitas.
                </p>
            </div>
        </div>

        <!-- Gallery Grid -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    projects.map((project, index) => (
                        <a
                            href={`/proyek/${project.slug}`}
                            class="group relative overflow-hidden rounded-2xl shadow-lg cursor-pointer bg-white block"
                        >
                            <div class="aspect-w-4 aspect-h-3 h-80 overflow-hidden">
                                <Image
                                    src={project.image as any}
                                    alt={project.title}
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-in-out"
                                    width={800}
                                    height={600}
                                    loading={index < 3 ? "eager" : "lazy"}
                                />
                            </div>
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-8">
                                <span class="text-[#FE5C01] text-sm font-medium mb-1 transform translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform duration-300">
                                    {project.category}
                                </span>
                                <h4 class="text-white text-xl font-bold mb-1 transform translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform duration-300 delay-75">
                                    {project.title}
                                </h4>
                                <p class="text-gray-300 text-sm transform translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform duration-300 delay-100 flex items-center">
                                    <svg
                                        class="w-4 h-4 mr-1"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        />
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        />
                                    </svg>
                                    {project.location}
                                </p>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </main>

    <Footer />
</Layout>
