---
const links = [
    { text: "Beranda", href: "/" },
    { text: "Tentang", href: "/about" },
    { text: "Layanan", href: "/layanan" },
    { text: "Proyek", href: "/proyek" },
];
---

<nav
    class="fixed w-full z-50 transition-all duration-300 bg-white/90 backdrop-blur-md border-b border-gray-100"
    id="navbar"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="block">
                    <img src="/logo.svg" alt="KKB Logo" class="h-10 w-auto" />
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    {
                        links.map((link) => (
                            <a
                                href={link.href}
                                class="text-[#151515] hover:text-[#FE5C01] px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
                            >
                                {link.text}
                            </a>
                        ))
                    }
                    <a
                        href="/contact"
                        class="bg-[#FE5C01] hover:bg-[#e54e00] text-white px-5 py-2.5 rounded-full text-sm font-medium transition-all shadow-lg shadow-orange-500/30 hover:shadow-orange-500/50"
                    >
                        Hubungi Kami
                    </a>
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="-mr-2 flex md:hidden">
                <button
                    type="button"
                    class="inline-flex items-center justify-center p-2 rounded-md text-gray-800 hover:text-[#FE5C01] focus:outline-none"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                    id="mobile-menu-btn"
                >
                    <span class="sr-only">Open main menu</span>
                    <!-- Icon when menu is closed -->
                    <svg
                        class="block h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <!-- Icon when menu is open -->
                    <svg
                        class="hidden h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        class="hidden md:hidden bg-white border-t border-gray-100"
        id="mobile-menu"
    >
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
            {
                links.map((link) => (
                    <a
                        href={link.href}
                        class="text-gray-800 hover:text-[#FE5C01] block px-3 py-2 rounded-md text-base font-medium"
                    >
                        {link.text}
                    </a>
                ))
            }
            <a
                href="/contact"
                class="bg-[#FE5C01] text-white block px-3 py-2 rounded-md text-base font-medium mt-4 text-center"
            >
                Hubungi Kami
            </a>
        </div>
    </div>
</nav>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const icons = btn?.querySelectorAll("svg");

    if (btn && menu && icons) {
        btn.addEventListener("click", () => {
            const isExpanded = btn.getAttribute("aria-expanded") === "true";
            btn.setAttribute("aria-expanded", (!isExpanded).toString());
            menu.classList.toggle("hidden");

            icons[0].classList.toggle("hidden");
            icons[1].classList.toggle("hidden");
        });
    }

    // Close mobile menu when clicking a link
    const mobileLinks = menu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            if (menu && !menu.classList.contains("hidden")) {
                btn?.click();
            }
        });
    });
</script>
